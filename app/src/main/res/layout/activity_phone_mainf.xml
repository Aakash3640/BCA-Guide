<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.BCAGuide.Phone_Mainf">



    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="-47dp"
        app:cardBackgroundColor="#F8B926"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="343dp"
        android:layout_marginEnd="-96dp"
        android:layout_marginBottom="-5dp"
        app:cardBackgroundColor="#039BE5"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-72dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="749dp"
        app:cardBackgroundColor="#F4511E"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="181dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="102dp"
        app:cardBackgroundColor="#E53935"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="223dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#45ED20"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Please Enter Your Phone Mobile"
    android:textSize="40sp"
    android:paddingLeft="40sp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textColor="#D81B60"
    android:layout_marginTop="150sp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300sp"
        android:id="@+id/spin"
        android:layout_marginLeft="10sp"/>


    <soup.neumorphism.NeumorphCardView
        android:layout_width="300sp"
        android:layout_height="100sp"
       android:layout_marginTop="300sp"
android:layout_marginLeft="120sp"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
           />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:paddingStart="80sp"
            android:hint="Phone"
            android:textColor="@color/black"

            android:background="@null"
            android:id="@+id/phone"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_marginTop="470sp"
        android:layout_centerHorizontal="true"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Next"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="30sp"
            android:id="@+id/next"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>


    </soup.neumorphism.NeumorphCardView>

</RelativeLayout>