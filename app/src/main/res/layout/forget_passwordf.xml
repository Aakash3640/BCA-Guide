<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context="com.ak.bcaguide.ForgetPasswordf">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="637dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="67dp"
        android:background="@color/neumorphism_background">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="200sp"
            android:layout_height="250sp"
            app:cardCornerRadius="100sp"
            app:cardElevation="10sp"
            app:layout_constraintBottom_toTopOf="@+id/neumorphCardView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="235dp"
                android:layout_gravity="center"
                android:src="@drawable/confuse" />

        </androidx.cardview.widget.CardView>


        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neumorphCardView4"
            android:layout_width="320sp"
            android:layout_height="90sp"
            android:layout_marginBottom="164dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:neumorph_shapeType="pressed">

            <EditText
                android:id="@+id/registeremail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/enter_register_email"
                android:inputType="textEmailAddress"
                android:paddingStart="20sp"
                android:textColor="@color/black" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/reset"
            style="@style/ShapeAppearance.Neumorph.Button"
            android:layout_width="150sp"
            android:layout_height="80sp"
            android:layout_below="@+id/constraintLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Reset"
            android:textColor="#061575"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView4" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>