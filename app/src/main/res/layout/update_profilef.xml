<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.BCAGuide.UpdateProfilef">


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="-47dp"
        app:cardBackgroundColor="#F8B926"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="343dp"
        android:layout_marginEnd="-96dp"
        android:layout_marginBottom="-5dp"
        app:cardBackgroundColor="#039BE5"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-72dp"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="749dp"
        app:cardBackgroundColor="#F4511E"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />



    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="223dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#45ED20"
        app:cardCornerRadius="200sp"
        app:cardElevation="10sp" />
    <soup.neumorphism.NeumorphTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile Info"
        android:textSize="40sp"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="100sp"
        android:textColor="#039BE5"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="160sp"
        app:cardCornerRadius="100sp"
        app:cardElevation="20sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/upic"
           />
    </androidx.cardview.widget.CardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="380sp"
        android:layout_height="100sp"
        app:neumorph_shapeType="pressed"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:id="@+id/one"
        android:layout_marginTop="340sp">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
          />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:paddingStart="50sp"
            android:hint="Name"
            android:textColor="@color/black"

            android:background="@null"
            android:id="@+id/uname"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="380sp"
        android:layout_height="100sp"
        app:neumorph_shapeType="pressed"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:layout_below="@+id/one"
        android:id="@+id/two"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
           />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:paddingStart="50sp"
            android:hint="Email"
            android:textColor="@color/black"

            android:background="@null"
            android:id="@+id/uemail"/>

    </soup.neumorphism.NeumorphCardView>



    <soup.neumorphism.NeumorphCardView
        android:layout_width="380sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/two"
        app:neumorph_shapeType="pressed"
        android:layout_marginLeft="20sp"
        android:id="@+id/four"

        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center_vertical"
          />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:paddingStart="50sp"
            android:hint="Phone"
            android:textColor="@color/black"

            android:background="@null"
            android:id="@+id/uphone"/>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:layout_width="160sp"
        android:layout_height="80sp"
        android:layout_below="@id/four"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:gravity="center"
        android:textSize="25sp"
        android:id="@+id/updatenow"
        android:text="Update" />

</RelativeLayout>